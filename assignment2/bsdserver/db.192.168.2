$TTL 3h

; SOA Records
2.168.192.in-addr.arpa. IN SOA ns2.foo.org.nz. tech.somedomain.net. (
  4    ; serial number
  3h   ; slave refresh
  1h   ; slave retry
  3d   ; slave expires
  1h ) ; negative ttl

; Nameserver Records
2.168.192.in-addr.arpa. IN NS ns2.foo.org.nz.

; PTR Records
100.2.168.192.in-addr.arpa. IN PTR ns2.foo.org.nz.

; MX Records
foo.org.nz. IN MX 0 ns1.foo.org.nz.
